{
  "extends": [
    "next",
    "next/core-web-vitals",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "quoteProps": "as-needed", // To avoid enforcing quotes on object keys unless necessary
        "endOfLine": "auto", // Windows-style line endings (CRLF, or \r\n), but it's expecting Unix-style (LF, or \n).
        "semi": true // Keep semicolons
      }
    ],
    "quotes": "off" // Disable ESLint quotes rule
  }
}